<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_round_edittext">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    >
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="编        号"
                android:textSize="16dp"
                android:background="@drawable/style"
                android:gravity="center" />
            <TextView
                android:id="@+id/hosR_id"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/style"
                android:text="1001"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="姓        名"
                android:textSize="16dp"
                android:background="@drawable/style"
                android:gravity="center" />
            <TextView
                android:id="@+id/hosR_name"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/style"
                android:text="张三"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="医        生"
                android:textSize="16dp"
                android:background="@drawable/style"
                android:gravity="center" />
            <TextView
                android:id="@+id/hosR_docname"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/style"
                android:text="吴冬梅"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="挂号时间"
                android:textSize="16dp"
                android:background="@drawable/style"
                android:gravity="center" />
            <TextView
                android:id="@+id/hosR_creatTime"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/style"
                android:text="2018-09-20"
                android:textSize="16dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/look_button"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/button_round_edittext"
                android:text="详情"
                android:layout_marginRight="40dp"
                android:textSize="16dp"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/update_button"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/button_round_edittext"
                android:text="修改"
                android:layout_marginRight="40dp"
                android:textSize="16dp"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/delete_button"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/button_round_edittext"
                android:text="退号"
                android:textSize="16dp"
                android:textColor="#fff"
                />
        </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>